<?xml version="1.0"?>

<robot name="bumperbot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Start GZ or Ignition depending on ROS 2 Version -->
  <xacro:arg name="is_ignition" default="true"/>

  <!-- Load Simulated or Real Hardware Interfaces -->
  <xacro:arg name="is_sim" default="false"/>


  <!-- Include Gazebo Parameters -->
  <xacro:include filename="$(find amr_description)/urdf/amr_gazebo.xacro" />

  <!-- Include ros2_control Plugins -->
  <xacro:include filename="$(find amr_description)/urdf/amr_ros2_control.xacro" />

  <link name="base_footprint"/>

<link name="base_link">
<inertial>
<!-- Slightly increase the mass for better stability -->
<origin xyz="0 0 0.1" rpy="0.0 0.0 0.0"/>
<mass value="1.2"/>
<!-- Increased from 0.82573504 -->
<inertia ixx="0.03" ixy="-0.0001" ixz="0.0003" iyy="0.03" iyz="-0.00005" izz="0.025"/>
</inertial>
<visual>
<geometry>
<box size="1.195 0.925 0.385"/>
<!-- Slightly increased height for center of gravity -->
</geometry>
<origin xyz="0 0 0.1" rpy="0 0 0"/>
<material name="Green">
  <color rgba="0 1 0 1"/> <!-- Green color (R,G,B,A) -->
</material>

</visual>
<collision>
<geometry>
<box size="1.195 0.925 0.385"/>
</geometry>
<origin xyz="0 0 0.1" rpy="0 0 0"/>
</collision>
</link>
<link name="lidar">
<inertial>
<origin xyz="0 0 0" rpy="0 0 0"/>
<mass value="0.6"/>
<!-- Slightly increased mass for stability -->
<inertia ixx="0.0006" ixy="0" ixz="0" iyy="0.0006" iyz="0" izz="0.0006"/>
</inertial>
<visual>
<geometry>
<cylinder radius="0.1" length="0.05"/>
</geometry>
<material name="red">
  <color rgba="1 0 0 1"/> 
</material>
<origin xyz="0 0 0.1" rpy="0 0 0"/>
</visual>
<collision>
<geometry>
<cylinder radius="0.1" length="0.05"/>
</geometry>
<origin xyz="0 0 0.1" rpy="0 0 0"/>
</collision>
</link>
<link name="wheel_left_link">
<inertial>
<origin xyz="0 0 0" rpy="0 0 0"/>
<mass value="0.065"/>
<!-- Increased mass for wheels to improve control -->
<inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00004" iyz="0" izz="0.00002"/>
</inertial>
<visual>
<geometry>
<cylinder radius="0.09" length="0.06"/>
<!-- Slightly larger wheel for better grip -->
</geometry>
<origin xyz="0 0 0" rpy="1.57 0 0"/>
</visual>
<collision>
<geometry>
<cylinder radius="0.08" length="0.05"/>
</geometry>
<origin xyz="0 0 0" rpy="1.57 0 0"/>
</collision>
</link>
<link name="wheel_right_link">
<inertial>
<origin xyz="0 0 0" rpy="0 0 0"/>
<mass value="0.065"/>
<!-- Match mass for left and right wheels -->
<inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00004" iyz="0" izz="0.00002"/>
</inertial>
<visual>
<geometry>
<cylinder radius="0.08" length="0.05"/>
</geometry>
<origin xyz="0 0 0" rpy="-1.57 0 0"/>
